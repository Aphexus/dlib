module dlib.image.io.bitio;

private
{
    import std.traits;
}

/*
 * Bit-level manipulations
 */

enum Endian
{
    Little,
    Big
}

T hiNibble(T)(T b)
{
    return ((b >> 4) & 0x0F); 
}

T loNibble(T)(T b)
{
    return (b & 0x0F);
}

T swapEndian16(T)(T n) 
{
    return cast(T)((n >> 8) | (n << 8));
}

T setBit(T)(T b, uint pos, bool state)
{
    if (state)
        return cast(T)(b | (1 << pos));
    else
        return cast(T)(b & ~(1 << pos));
}

bool getBit(T)(T b, uint pos)
{
    return ((b & (1 << pos)) != 0);
}

string bitString(T)(T n, uint len = 1) if (isIntegral!T)
{
    string res;
    const int size = T.sizeof * 8;
    
    bool s = 0;
    for (int a = 0; a < size; a++)
    {
        bool bit = n >> (size - 1);
        if (bit)
            s = 1;
        if (s)
            res ~= bit + '0';
        n <<= 1;
    }
    
    while (res.length < len)
        res = '0' ~ res;
        
    return res;
}

struct BitReader
{
    private
    {
        ubyte[] data;
        ubyte lastBits;
        uint bytePos = 0;
        uint bitPos = 0;
    }

    public bool end = false;

    this(ubyte[] dat)
    {
        data = dat;
        lastBits = data[0];
        bytePos = 1;
    }

    bool readBit()
    {
        bool bit = getBit(data[bytePos], bitPos);

        bitPos++;

        if (bitPos == 8)
        {
            bitPos = 0;
            bytePos++;
        }

        if ((lastBits != 0) && 
            (bytePos == data.length-1) && 
            (bitPos == lastBits))
        {
            end = true;
        }

        return bit;
    }

    ubyte readByte()
    {
        ubyte bite = 0;
        foreach(pos; 0..8)
            bite = setBit(bite, pos, readBit());
        return bite;
    }
}

struct BitWriter
{
    private
    {
        ubyte[] data;
        uint bytePos = 0;
        uint bitPos = 0;
    }

    void writeBit(bool b)
    {
        if (bytePos == 0)
        {
            data = new ubyte[1];
            bytePos++;
        }

        if (bitPos == 0)
            data ~= 0;

        data[bytePos] = setBit(data[bytePos], bitPos, b);
        bitPos++;

        if (bitPos == 8)
        {
            bitPos = 0;
            bytePos++;
        }
    }

    void writeByte(ubyte bite)
    {
        foreach(pos; 0..8)
            writeBit(getBit(bite, pos));
    }

    ubyte[] getData()
    {
        data[0] = cast(ubyte)bitPos;
        return data;
    }
}

